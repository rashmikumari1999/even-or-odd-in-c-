#include <iostream>
using namespace std;
int isEven(int n)
{
    if (n%2==0)
    return 1;
    else
    return 0;
}
int main()
{
    int ans,i,num,z;
    cout<<"we want to check a number is even or odd:";
    cin>>z;
    for(i=0; i<=z; i++)
    {
        cout<<"enter a num:";
        cin>>num;
        ans= isEven(num);
        if(ans==1)
        cout<<"%d)isEven",num;
        if(ans==0)
        cout<<"%d isOdd",num;
    }
}
